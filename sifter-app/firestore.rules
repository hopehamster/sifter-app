rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read/write their own data
    match /users/{userId} {
      // Allow users to read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow limited reading for username validation during signup
      // This allows checking if a username exists without exposing user data
      allow read: if request.auth == null && 
                     resource != null && 
                     (request.query.limit == null || request.query.limit <= 1);
    }
    
    // Phone users collection - for phone number to email mapping
    match /phone_users/{phoneNumber} {
      // Allow reading for phone lookup during sign-in (unauthenticated)
      allow read: if true;
      
      // Allow authenticated users to write their own phone mapping
      allow write: if request.auth != null;
    }
    
    // Chat rooms collection
    match /chat_rooms/{roomId} {
      // Allow reading for authenticated users
      allow read: if request.auth != null;
      
      // Allow creating for authenticated non-anonymous users
      allow create: if request.auth != null && 
                       request.auth.token.firebase.sign_in_provider != 'anonymous';
      
      // Allow updating/deleting for room creators
      allow update, delete: if request.auth != null && 
                               request.auth.uid == resource.data.createdBy;
    }
    
    // Messages collection
    match /chat_rooms/{roomId}/messages/{messageId} {
      // Allow reading for authenticated users
      allow read: if request.auth != null;
      
      // Allow creating for authenticated users
      allow create: if request.auth != null;
      
      // Allow updating/deleting own messages
      allow update, delete: if request.auth != null && 
                               request.auth.uid == resource.data.senderId;
    }
    
    // Block all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 